        <div class="photo-wrapper">
          <img src="<%= image_path 'ayberk_akici.jpg' %>" alt="Ayberk Akıcı" title="Ayberk Akıcı" class="img-responsive" />
        </div>
        <ul class="sidebar-nav">
                <li class="sidebar-brand">
