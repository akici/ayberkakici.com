        </div>
      </aside>
      <div class="content box-shadow">
        <%= yield %>
      </div>
    </div>

    <div id="goTop" style="display: none">
      <a class="goTopAnchor"><span class="icon-arrow-up"></span>
      </a>
    </div>

  </body>
</html>
